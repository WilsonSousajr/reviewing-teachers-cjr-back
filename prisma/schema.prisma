generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id Int @default(autoincrement()) @id
  email String @unique
  password String
  name String
  departament String
  course String
  createdAt DateTime
  updatedAt DateTime? 
  reviews Review[]
  comments Comment[]
}

model Review{
  id Int @default(autoincrement()) @id
  user User @relation(fields: [userId], references: [id])
  userId Int
  teacherId Int
  disciplineId Int
  title String
  content String
  createdAt DateTime
  updatedAt DateTime?
  comments Comment[]
}

model Comment{
  id Int @default(autoincrement()) @id
  user User @relation(fields: [userId], references: [id])
  userId Int
  review Review? @relation(fields: [reviewId], references: [id])
  reviewId Int?
}

model Teacher{
  id Int @default(autoincrement()) @id 
  name String
  departament String
  createdAt DateTime
  updatedAt DateTime?
  disciplines TeacherToDiscipline[]
}

model Discipline{
  id Int @default(autoincrement()) @id
  name String
  createdAt DateTime
  updatedAt DateTime?
  teachers TeacherToDiscipline[]
}

model TeacherToDiscipline{
  id Int @default(autoincrement()) @id 
  teacher Teacher @relation(fields: [teacherId], references: [id])
  teacherId Int
  discipline Discipline @relation(fields: [disciplineId], references: [id])
  disciplineId Int
}


